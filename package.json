{
  "name": "arts_works_server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Server part of project about painters and their art works",
  "main": "index.js",
  "scripts": {
    "format:check": "prettier --check src/**/*.js",
    "format:write": "prettier --write src/**/*.js",
    "lint:check": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js",
    "prepare": "husky install"
  },
  "keywords": [
    "JS",
    "NodeJS",
    "painter",
    "draw",
    "picture",
    "art",
    "work"
  ],
  "author": "Vadim",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vadim-Sakuta-VS/arts_works_server"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:fix",
      "npm run format:write"
    ]
  }
}
